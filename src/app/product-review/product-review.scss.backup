.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.product-ratings-wrapper {
  display: grid;
  grid-template-columns: 1fr 380px;
  gap: 30px;
  margin-bottom: 40px;
  
  @media (max-width: 1200px) {
    grid-template-columns: 1fr;
  }
}

.product-section {
  display: grid;
  grid-template-columns: 400px 1fr;
  gap: 40px;
  padding: 30px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  
  @media (max-width: 900px) {
    grid-template-columns: 1fr;
  }
}

.image-rating-container {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.product-image {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-radius: 8px;
}

.overall-rating-badge {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  padding: 24px;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
  
  .rating-value {
    font-size: 48px;
    font-weight: 700;
    color: white;
    line-height: 1;
    margin-bottom: 8px;
  }
  
  .stars {
    display: flex;
    justify-content: center;
    gap: 4px;
    margin-bottom: 12px;
    
    span {
      font-size: 24px;
      color: rgba(255, 255, 255, 0.3);
      
      &.filled {
        color: #fbbf24;
      }
      
      &.half {
        color: #fbbf24;
      }
    }
  }
  
  .rating-details {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
  }
  
  .review-count {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.7);
  }
}

.product-info h1 {
  margin: 0 0 10px 0;
  font-size: 32px;
  color: #1a1a1a;
}

.manufacturer {
  font-size: 13px;
  color: #2563eb;
  font-weight: 600;
  margin: 0 0 8px 0;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.category {
  font-size: 14px;
  color: #666;
  margin: 0 0 10px 0;
  font-weight: 500;
}

.price {
  font-size: 28px;
  font-weight: bold;
  color: #2563eb;
  margin: 10px 0;
}

.description {
  color: #666;
  line-height: 1.6;
  margin: 20px 0;
}

.specifications {
  margin: 20px 0;
  
  h3 {
    font-size: 18px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 12px 0;
  }
  
  ul {
    margin: 0;
    padding-left: 20px;
    
    li {
      color: #4b5563;
      line-height: 1.8;
      font-size: 14px;
    }
  }
}

.rating-summary {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 20px;
}

.stars {
  display: flex;
  gap: 2px;
}

.stars span {
  font-size: 24px;
  color: #ddd;
}

.stars span.filled {
  color: #fbbf24;
}

.stars span.half {
  color: #fbbf24;
}

.rating-text {
  color: #666;
  font-size: 14px;
}

.category-ratings-section {
  background: white;
  padding: 30px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  height: fit-content;
  position: sticky;
  top: 20px;

  h2 {
    margin: 0 0 20px 0;
    font-size: 20px;
    color: #1a1a1a;
    font-weight: 700;
  }
}

.category-rating-card {
  padding: 16px;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  margin-bottom: 12px;
  transition: all 0.2s;

  &:hover {
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border-color: #2563eb;
  }

  &:last-child {
    margin-bottom: 0;
  }
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;

  h3 {
    margin: 0;
    font-size: 15px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .rating-score {
    font-size: 16px;
    font-weight: 700;
    color: #2563eb;
  }
}

.category-description {
  color: #666;
  font-size: 12px;
  line-height: 1.4;
  margin: 0 0 8px 0;
}

.category-rating-card .stars {
  display: flex;
  gap: 2px;
  
  span {
    font-size: 18px;
  }
}

// Reviews Section
.reviews-section {
  margin-top: 40px;
  
  h2 {
    font-size: 28px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 30px 0;
  }
}

.reviews-grid {
  display: grid;
  gap: 24px;
}

.review-card {
  background: white;
  border-radius: 12px;
  padding: 28px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transition: all 0.3s;
  
  &:hover {
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    transform: translateY(-2px);
  }
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20px;
  padding-bottom: 20px;
  border-bottom: 2px solid #f3f4f6;
}

.reviewer-info {
  h3 {
    margin: 0 0 6px 0;
    font-size: 18px;
    font-weight: 700;
    color: #1a1a1a;
  }
  
  .reviewer-details {
    margin: 0 0 4px 0;
    font-size: 14px;
    color: #2563eb;
    font-weight: 600;
  }
  
  .review-date {
    margin: 0;
    font-size: 13px;
    color: #9ca3af;
  }
}

.review-overall-rating {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
  
  .rating-number {
    font-size: 32px;
    font-weight: 700;
    color: #2563eb;
    line-height: 1;
  }
  
  .rating-stars-small {
    display: flex;
    gap: 2px;
    
    span {
      font-size: 16px;
      color: #d1d5db;
      
      &.filled {
        color: #fbbf24;
      }
    }
  }
}

.review-ratings {
  display: grid;
  gap: 14px;
  margin-bottom: 20px;
}

.rating-item {
  display: grid;
  grid-template-columns: 150px 50px 1fr;
  align-items: center;
  gap: 12px;
  
  .rating-label {
    font-size: 14px;
    font-weight: 600;
    color: #4b5563;
  }
  
  .rating-value {
    font-size: 14px;
    font-weight: 700;
    color: #2563eb;
    text-align: right;
  }
}

.rating-bar {
  height: 8px;
  background: #e5e7eb;
  border-radius: 4px;
  overflow: hidden;
  
  .rating-fill {
    height: 100%;
    background: linear-gradient(90deg, #2563eb 0%, #3b82f6 100%);
    transition: width 0.3s ease;
  }
}

.review-comments {
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid #e5e7eb;
}

.comment-item {
  margin-bottom: 14px;
  font-size: 14px;
  line-height: 1.6;
  color: #4b5563;
  
  &:last-child {
    margin-bottom: 0;
  }
  
  strong {
    color: #1a1a1a;
    font-weight: 600;
    display: block;
    margin-bottom: 4px;
  }
}

.other-systems {
  margin-top: 16px;
  padding: 14px;
  background: #f9fafb;
  border-radius: 8px;
  font-size: 13px;
  color: #4b5563;
  
  strong {
    color: #1a1a1a;
    font-weight: 600;
  }
}

.classification-footer {
  margin-top: 40px;
  padding: 16px;
  background: #006400;
  color: white;
  text-align: center;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 1.5px;
  border-radius: 8px;
}

// AI Summary Button Container (under image)
.action-buttons-container {
  display: flex;
  gap: 12px;
  justify-content: center;
  margin: 10px 0;
}

.ai-summary-button-container,
.review-product-button-container {
  flex: 0 0 160px;
}

.generate-summary-btn, .toggle-summary-btn, .review-product-btn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 12px;
  background: #b8860b;
  color: #1a365d;
  border: 2px solid #b8860b;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  cursor: pointer;
  transition: all 0.2s;
  width: 100%;
  justify-content: center;
  height: 36px;
  box-sizing: border-box;

  svg {
    flex-shrink: 0;
  }

  &:hover:not(:disabled) {
    background: #d4a017;
    border-color: #d4a017;
    transform: translateY(-1px);
  }

  &:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  &:active:not(:disabled) {
    transform: translateY(0);
  }
}

.review-product-btn {
  background: #1a365d;
  color: white;
  border-color: #1a365d;

  &:hover:not(:disabled) {
    background: #2d3748;
    border-color: #2d3748;
  }
}

.loading-spinner {
  width: 12px;
  height: 12px;
  border: 2px solid #1a365d;
  border-top: 2px solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

// AI Summary Display Section (below overall rating)
.summary-display-section {
  margin-top: 15px;
  padding: 16px;
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.summary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.summary-header h4 {
  font-size: 16px;
  font-weight: 700;
  color: #1a365d;
  margin: 0;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.regenerate-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  background: #e5e7eb;
  border: 1px solid #d1d5db;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.2s;

  svg {
    stroke: #6b7280;
  }

  &:hover:not(:disabled) {
    background: #d1d5db;
    border-color: #9ca3af;
  }

  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
}

.summary-text {
  font-size: 14px;
  line-height: 1.6;
  color: #374151;
  margin: 0;
  white-space: pre-wrap;
}

@media (max-width: 768px) {
  .product-section {
    grid-template-columns: 1fr;
  }
  
  .product-image {
    height: 300px;
  }
}

// Load More Button
.load-more-container {
  text-align: center;
  margin-top: 30px;
  padding: 20px 0;
}

.load-more-btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  background: #1a365d;
  color: white;
  border: 2px solid #1a365d;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  cursor: pointer;
  transition: all 0.3s;
  
  svg {
    flex-shrink: 0;
  }
  
  &:hover {
    background: #2d3748;
    border-color: #2d3748;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(26, 54, 93, 0.3);
  }
  
  &:active {
    transform: translateY(0);
  }
}

// Write Review Section
.write-review-section {
  margin-top: 50px;
  padding: 30px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.write-review-header {
  text-align: center;
  margin-bottom: 30px;
  
  h2 {
    font-size: 28px;
    font-weight: 700;
    color: #1a365d;
    margin: 0 0 10px 0;
  }
  
  p {
    font-size: 16px;
    color: #666;
    margin: 0;
  }
}

.write-review-button-container {
  text-align: center;
}

.write-review-btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 16px 32px;
  background: #b8860b;
  color: #1a365d;
  border: 2px solid #b8860b;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  cursor: pointer;
  transition: all 0.3s;
  
  svg {
    flex-shrink: 0;
  }
  
  &:hover {
    background: #d4a017;
    border-color: #d4a017;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(184, 134, 11, 0.3);
  }
  
  &:active {
    transform: translateY(0);
  }
}

// Review Form
.review-form-container {
  max-width: 800px;
  margin: 0 auto;
}

.review-form {
  .form-section {
    margin-bottom: 30px;
    padding: 20px;
    background: #f8fafc;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
    
    h3 {
      font-size: 20px;
      font-weight: 600;
      color: #1a365d;
      margin: 0 0 20px 0;
      padding-bottom: 10px;
      border-bottom: 2px solid #b8860b;
    }
  }
  
  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
  }
  
  .form-group {
    label {
      display: block;
      font-size: 14px;
      font-weight: 600;
      color: #374151;
      margin-bottom: 6px;
    }
    
    input, select {
      width: 100%;
      padding: 10px 12px;
      border: 2px solid #e5e7eb;
      border-radius: 6px;
      font-size: 14px;
      transition: border-color 0.2s;
      
      &:focus {
        outline: none;
        border-color: #b8860b;
        box-shadow: 0 0 0 3px rgba(184, 134, 11, 0.1);
      }
    }
  }
}

.ai-generate-section {
  text-align: center;
  margin: 30px 0;
  padding: 20px;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 8px;
  border: 1px solid #cbd5e1;
}

.ai-generate-btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 14px 28px;
  background: #1a365d;
  color: white;
  border: 2px solid #1a365d;
  border-radius: 8px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
  
  svg {
    flex-shrink: 0;
  }
  
  &:hover:not(:disabled) {
    background: #2d3748;
    border-color: #2d3748;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(26, 54, 93, 0.3);
  }
  
  &:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }
  
  &:active:not(:disabled) {
    transform: translateY(0);
  }
}

.ai-help-text {
  font-size: 13px;
  color: #666;
  margin: 10px 0 0 0;
  font-style: italic;
}

.rating-category {
  margin-bottom: 25px;
  padding: 20px;
  background: white;
  border-radius: 8px;
  border: 1px solid #e5e7eb;
  
  .category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    
    h4 {
      font-size: 16px;
      font-weight: 600;
      color: #1a365d;
      margin: 0;
    }
    
    .star-rating {
      display: flex;
      align-items: center;
      gap: 4px;
      cursor: pointer;
      
      span {
        font-size: 20px;
        color: #e5e7eb;
        transition: color 0.2s;
        
        &.selected {
          color: #b8860b;
        }
        
        &:hover {
          color: #b8860b;
        }
      }
      
      .rating-number {
        font-size: 14px;
        font-weight: 600;
        color: #374151;
        margin-left: 8px;
      }
    }
  }
  
  textarea {
    width: 100%;
    min-height: 80px;
    padding: 12px;
    border: 2px solid #e5e7eb;
    border-radius: 6px;
    font-size: 14px;
    line-height: 1.5;
    resize: vertical;
    transition: border-color 0.2s;
    
    &:focus {
      outline: none;
      border-color: #b8860b;
      box-shadow: 0 0 0 3px rgba(184, 134, 11, 0.1);
    }
    
    &::placeholder {
      color: #9ca3af;
    }
  }
}

.form-actions {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 30px;
  padding-top: 20px;
  border-top: 2px solid #e5e7eb;
}

.cancel-btn, .submit-btn {
  padding: 12px 24px;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  cursor: pointer;
  transition: all 0.2s;
  border: 2px solid;
}

.cancel-btn {
  background: white;
  color: #6b7280;
  border-color: #d1d5db;
  
  &:hover {
    background: #f9fafb;
    border-color: #9ca3af;
  }
}

.submit-btn {
  background: #b8860b;
  color: #1a365d;
  border-color: #b8860b;
  
  &:hover {
    background: #d4a017;
    border-color: #d4a017;
  }
}